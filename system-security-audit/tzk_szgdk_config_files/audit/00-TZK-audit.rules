# CIS Deb 11 v1.0.0

# 4.1.3.1
# Obserwowanie zmian w pliku /etc/sudoers
-w /etc/sudoers -p wa -k scope
# Obserwowanie zmian w katalogu /etc/sudoers.d
-w /etc/sudoers.d -p wa -k scope

# 4.1.3.2
# Monitorowanie uzyskiwania uprzywilejowanych uprawnień poprzez emulację użytkownika
-a always,exit -F arch=b64 -C euid!=uid -F auid!=unset -S execve -k user_emulation
-a always,exit -F arch=b32 -C euid!=uid -F auid!=unset -S execve -k user_emulation

# 4.1.3.3
# Monitorowanie modyfikacji pliku logowania sudo
-w /var/log/sudo.log -p wa -k sudo_log_file

# 4.1.3.4
# Monitorowanie zdarzeń modyfikujących informacje o dacie i czasie
-a always,exit -F arch=b64 -S adjtimex,settimeofday,clock_settime -k time_change
-a always,exit -F arch=b32 -S adjtimex,settimeofday,clock_settime -k time_change
-w /etc/localtime -p wa -k time-change

# 4.1.3.5
# Monitorowanie ustawień nazwy hosta i domeny dla architektury 64-bitowej i 32-bitowej
-a always,exit -F arch=b64 -S sethostname,setdomainname -k system_locale
-a always,exit -F arch=b32 -S sethostname,setdomainname -k system_locale
-w /etc/issue -p wa -k system_locale
-w /etc/issue.net -p wa -k system_locale
-w /etc/hosts -p wa -k system_locale
-w /etc/networks -p wa -k system_locale
-w /etc/network/ -p wa -k system_locale

# 4.1.3.6
# Monitorowanie zmian w plikach konfiguracyjnych użytkowników i grup
-w /etc/passwd -p wa -k user_changes
-w /etc/group -p wa -k group_changes
-w /etc/shadow -p wa -k shadow_changes
-w /etc/gshadow -p wa -k gshadow_changes
# Monitorowanie użycia ważnych poleceń
-a always,exit -F path=/usr/bin/sudo -F perm=x -F auid>=1000 -F auid!=unset -k privileged_command_sudo
-a always,exit -F path=/usr/bin/su -F perm=x -F auid>=1000 -F auid!=unset -k privileged_command_su
-a always,exit -F path=/usr/bin/passwd -F perm=x -F auid>=1000 -F auid!=unset -k privileged_command_passwd
-a always,exit -F path=/usr/bin/chsh -F perm=x -F auid>=1000 -F auid!=unset -k privileged_command_chsh
-a always,exit -F path=/usr/bin/newgrp -F perm=x -F auid>=1000 -F auid!=unset -k privileged_command_newgrp
-a always,exit -F path=/usr/bin/chfn -F perm=x -F auid>=1000 -F auid!=unset -k privileged_command_chfn

# 4.1.3.7
-a always,exit -F arch=b64 -S creat,open,openat,truncate,ftruncate -F exit=-EACCES -F auid>=1000 -F auid!=unset -k access
-a always,exit -F arch=b64 -S creat,open,openat,truncate,ftruncate -F exit=-EPERM -F auid>=1000 -F auid!=unset -k access
-a always,exit -F arch=b32 -S creat,open,openat,truncate,ftruncate -F exit=-EACCES -F auid>=1000 -F auid!=unset -k access
-a always,exit -F arch=b32 -S creat,open,openat,truncate,ftruncate -F exit=-EPERM -F auid>=1000 -F auid!=unset -k access

# 4.1.3.8
# Monitorowanie zdarzeń modyfikujących informacje o użytkownikach/grupach
-w /etc/group -p wa -k identity
-w /etc/passwd -p wa -k identity
-w /etc/gshadow -p wa -k identity
-w /etc/shadow -p wa -k identity
-w /etc/security/opasswd -p wa -k identity

# 4.1.3.9
-a always,exit -F arch=b64 -S chmod,fchmod,fchmodat -F auid>=1000 -F auid!=unset -F key=perm_mod
-a always,exit -F arch=b64 -S chown,fchown,lchown,fchownat -F auid>=1000 -F auid!=unset -F key=perm_mod
-a always,exit -F arch=b32 -S chmod,fchmod,fchmodat -F auid>=1000 -F auid!=unset -F key=perm_mod
-a always,exit -F arch=b32 -S lchown,fchown,chown,fchownat -F auid>=1000 -F auid!=unset -F key=perm_mod
-a always,exit -F arch=b64 -S setxattr,lsetxattr,fsetxattr,removexattr,lremovexattr,fremovexattr -F auid>=1000 -F auid!=unset -F key=perm_mod
-a always,exit -F arch=b32 -S setxattr,lsetxattr,fsetxattr,removexattr,lremovexattr,fremovexattr -F auid>=1000 -F auid!=unset -F key=perm_mod

# 4.1.3.10
# Monitorowanie udanych montowań systemu plików
-a always,exit -F arch=b32 -S mount -F auid>=1000 -F auid!=unset -k mounts
-a always,exit -F arch=b64 -S mount -F auid>=1000 -F auid!=unset -k mounts

# 4.1.3.11
# Zasady monitorowania informacji o inicjacji sesji
-w /var/run/utmp -p wa -k session
-w /var/log/wtmp -p wa -k session
-w /var/log/btmp -p wa -k session

# 4.1.3.12
# Zasady monitorowania logowań
-w /var/log/lastlog -p wa -k logins
-w /var/run/faillock -p wa -k logins

# 4.1.3.13
# Monitorowanie zdarzeń usuwania plików przez użytkowników
-a always,exit -F arch=b64 -S rename,unlink,unlinkat,renameat -F auid>=1000 -F auid!=unset -F key=delete
-a always,exit -F arch=b32 -S rename,unlink,unlinkat,renameat -F auid>=1000 -F auid!=unset -F key=delete

# 4.1.3.14
# Monitorowanie zmian w polityce MAC
-w /etc/apparmor/ -p wa -k MAC-policy
-w /etc/apparmor.d/ -p wa -k MAC-policy

# 4.1.3.15, 4.1.3.16, 4.1.3.17, 4.1.3.18
# Monitorowanie prób użycia polecenia usermod, chcon, setfacl, chacl
-a always,exit -F path=/usr/bin/chcon -F perm=x -F auid>=1000 -F auid!=unset -k perm_chng
-a always,exit -F path=/usr/bin/setfacl -F perm=x -F auid>=1000 -F auid!=unset -k perm_chng
-a always,exit -F path=/usr/bin/chacl -F perm=x -F auid>=1000 -F auid!=unset -k priv_cmd
-a always,exit -F path=/usr/sbin/usermod -F perm=x -F auid>=1000 -F auid!=unset -k usermod

# 4.1.3.19
# Monitorowanie modułów jądra i narzędzia kmod
-a always,exit -F arch=b64 -S init_module,finit_module,delete_module,create_module,query_module -F auid>=1000 -F auid!=unset -k kernel_modules
-a always,exit -F path=/usr/bin/kmod -F perm=x -F auid>=1000 -F auid!=unset -k kernel_modules

# 4.1.3.20
# Zapewnia, że zasady audytu są niezmienne (immute) po uruchomieniu systemu.
# Po włączeniu tej opcji, zasady nie mogą być zmienione bez restartu.
# To zwiększa bezpieczeństwo systemu audytu, zapobiegając manipulacji zasadami w czasie rzeczywistym.
-e 2